{
  "openapi": "3.0.1",
  "info": {
    "title": "Class Management API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Swagger Mock Server URL"
    }
  ],
  "tags": [
    {
      "name": "Grades",
      "description": "Grades Information"
    },
    {
      "name": "Classes",
      "description": "Class Information"
    },
    {
      "name": "Students",
      "description": "Student Information"
    }
  ],
  "components": {
    "schemas": {
      "Class": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "Name": {
            "type": "string"
          },
          "GradeId": {
            "type": "integer"
          },
          "StartDate": {
            "type": "string",
            "format": "date"
          },
          "EndDate": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "Grade": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "Name": {
            "type": "string"
          }
        }
      },
      "Student": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "EnglishName": {
            "type": "string"
          },
          "Surname": {
            "type": "string"
          },
          "ChineseName": {
            "type": "string"
          },
          "ClassId": {
            "type": "integer"
          }
        }
      }
    }
  },
  "paths": {
    "/grades": {
      "get": {
        "tags": ["Grades"],
        "summary": "List of grades",
        "description": "Get a list of all the grades",
        "operationId": "getAllGrades",
        "responses": {
          "200": {
            "description": "Successful response with a list of grades",
            "content": {
              "application/json": {
                "example": {
                  "grades": [
                    {
                      "id": 1,
                      "Name": "YLE4"
                    },
                    {
                      "id": 2,
                      "Name": "CNC2"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Grades"],
        "summary": "Create a new grade",
        "description": "Create a new grade with the given information",
        "operationId": "createGrade",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Grade"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Grade created successfully"
          },
          "400": {
            "description": "Bad request, invalid input"
          }
        }
      }
    },
    "/grades/{id}": {
      "get": {
        "tags": ["Grades"],
        "summary": "Get a grade by ID",
        "description": "Get a single grade by its ID",
        "operationId": "getGradeById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID of the grade to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with the grade",
            "content": {
              "application/json": {
                "example": {
                  "id": 1,
                  "Name": "YLE4"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Grades"],
        "summary": "Update a grade by ID",
        "description": "Update an existing grade with new information",
        "operationId": "updateGrade",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID of the grade to update"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Grade"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Grade updated successfully"
          },
          "400": {
            "description": "Bad request, invalid input"
          },
          "404": {
            "description": "Grade not found"
          }
        }
      },
      "delete": {
        "tags": ["Grades"],
        "summary": "Delete a grade by ID",
        "description": "Delete an existing grade by its ID",
        "operationId": "deleteGrade",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID of the grade to delete"
          }
        ],
        "responses": {
          "204": {
            "description": "Grade deleted successfully"
          },
          "404": {
            "description": "Grade not found"
          }
        }
      }
    },
